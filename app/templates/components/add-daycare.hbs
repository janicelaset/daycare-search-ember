
<div class="container">
  <div class="row">
    <h3>Add your daycare:</h3>
    {{user.firstName}}
    <form>
      
      <div class="form-group">
        <label for="name"> Name:</label>
        {{input value=name id='name'}}
      </div>
      <div class="form-group">
        <label for="address"> Address:</label>
        {{input value=address id='address'}}
      </div>
      <div class="form-group">
        <label for="email"> Email:</label>
        {{input value=email id='email'}}
      </div>
      <div class="form-group">
        <label for="phone"> Phone:</label>
        {{input value=phone id='phone'}}
      </div>
      <div class="form-group">
        <label for="waitlist"> Waitlist:</label>
        {{input value=waitlist id='waitlist' placeholder='Enter approx waitlist time'}}
      </div>
      <div class="form-group">
        <label for="ratio"> Caregiver-to-Child Ratio:</label>
        {{input value=ratio id='ratio' placeholder="Caregiver:Child"}}
      </div>
      <div class="form-group">
        <label for="certifications">Certifications:</label>
        {{textarea  value=certifications id='certifications'}}
      </div>
      <div class="form-group">
        <label for="hours">Hours:</label>
        {{input value=hours id='hours'}}
      </div>
      <div class="form-group">
        <label for="mission">Mission:</label>
        {{textarea  value=mission id='mission'}}
      </div>
      <div class="form-group">
        <label for="description">Description:</label>
        {{textarea value=description id='description'}}
      </div>
      <div class="form-group">
        <label for="image2">Image 1:</label>
        {{input value=image1 id='image1'}}
      </div>
      <div class="form-group">
        <label for="image2">Image 2:</label>
        {{input value=image2 id='image2'}}
      </div>
      <div class="form-group">
        <label for="image3">Image 3:</label>
        {{input value=image3 id='image3'}}
      </div>
      <div class="form-group">
        <label for="image4">Image 4:</label>
        {{input value=image4 id='image4'}}
      </div>
      <div class="form-group">
        <label for="image5">Image 5:</label>
        {{input value=image5 id='image5'}}
      </div>
      <button {{action 'addDaycare'}}>Add your daycare!</button>
    </form>
  </div>
</div>



{{yield}}
